<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.queen.rxjava2withretrofitdemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".simpleRetrofit.SimpleRetrofitActivity"/>
        <activity android:name=".mvpDemo.activity.DoubanMovieActivity"/>
        <activity android:name=".mvpWithRxjavaDemo.activity.RxDoubanMovieActivity"/>
        <activity android:name=".greenDaoDemo.GreenDaoActivity"/>
        <activity android:name=".greenDaoDemo.GreenDaoDoubanActivity"/>
    </application>

</manifest>