<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/fragment_douban_movie_detail_loading_PB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_douban_movie_detail_null_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:text="对不起，暂时没有该影片的任何信息"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_douban_movie_detail_image_IV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_title_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Title"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_genres_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="类型："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_countries_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="国家："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_year_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="上映时间："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_director_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="导演："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/fragment_douban_movie_detail_cast_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="演员："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/fragment_douban_movie_detail_summary_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="简介："
                android:textColor="@android:color/darker_gray"
                android:textSize="14dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>